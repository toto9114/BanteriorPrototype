<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/detail_interior_size"
    android:layout_height="@dimen/detail_interior_size">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/image_detail_interior"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_profile"
        android:layout_gravity="left|bottom"
        android:src="@drawable/ic_line_logo"
        android:layout_marginLeft="@dimen/detail_line_logo_left_margin"
        android:layout_marginBottom="@dimen/detail_line_logo_bottom_margin"
        android:layout_marginRight="@dimen/detail_line_logo_right_margin" />

</FrameLayout>