<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="328dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_address_icon"
            android:src="@drawable/ic_delivery"
            android:layout_marginRight="@dimen/order_icon_right_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/header_address"
            android:id="@+id/text_address_title"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <ImageView
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_below="@+id/linear"
        android:layout_height="wrap_content"
        android:src="@drawable/first_line"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_username"
            android:id="@+id/text_brand"
            android:layout_marginRight="@dimen/order_info_right_margin"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="@dimen/order_text_search_width"
            android:layout_height="@dimen/order_text_search_height"
            android:id="@+id/edit_name"
            android:background="@drawable/textfield_search"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_phone"
            android:id="@+id/text_phone"
            android:layout_marginRight="@dimen/order_info_right_margin"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="@dimen/order_text_search_width"
            android:layout_height="@dimen/order_text_search_height"
            android:id="@+id/edit_phone"
            android:background="@drawable/textfield_search"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:id="@+id/linearLayout5"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_address"
            android:id="@+id/text_address"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/order_info_right_margin"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="@dimen/textfield_zip_width"
            android:layout_height="wrap_content"
            android:id="@+id/edit_adderess1"
            android:background="@drawable/textfield_zip_code"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/textView10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <EditText
            android:layout_width="@dimen/textfield_zip_width"
            android:layout_height="wrap_content"
            android:id="@+id/edit_address2"
            android:background="@drawable/textfield_zip_code"
            android:layout_weight="1"
            android:layout_marginRight="5dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/btn_map_search_width"
            android:layout_height="@dimen/btn_map_search_height"
            android:id="@+id/btn_search"
            android:background="@drawable/btn_map_search"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_username"
            android:id="@+id/textView11"
            android:visibility="invisible"
            android:layout_marginRight="@dimen/order_info_right_margin" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_detail_address"
            android:layout_weight="1"
            android:background="@drawable/textfield"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout7"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_rent_icon"
            android:src="@drawable/ic_clock"
            android:layout_marginRight="@dimen/order_icon_right_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/header_rent"
            android:id="@+id/text_rent_title"
            android:layout_gravity="center_vertical" />

    </LinearLayout>
    <ImageView
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout7"
        android:src="@drawable/first_line"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout8"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_today"
            android:layout_weight="2"
            android:background="@drawable/textfield_today"
            android:layout_gravity="bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:id="@+id/textView4"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_year"
            android:layout_weight="1"
            android:background="@drawable/textfield_day"
            android:layout_gravity="center_vertical|right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="년"
            android:id="@+id/textView8"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_month"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/textfield_day" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월"
            android:id="@+id/textView9"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_calender"
            android:src="@drawable/btn_calander"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/btn_calender_left_margin" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout9"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_total_icon"
            android:src="@drawable/ic_money"
            android:layout_marginRight="@dimen/order_icon_right_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/header_total"
            android:id="@+id/text_total_title"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <ImageView
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout9"
        android:src="@drawable/first_line"/>
    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"
        app:columnCount = "2"
        android:id="@+id/android.support.v7.widget.GridLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="상품금액"
            android:id="@+id/text_field_price"
            app:layout_columnWeight = "0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/text_price"
            app:layout_columnWeight = "3"
            app:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="보증금"
            android:id="@+id/textView15"
            app:layout_columnWeight = "0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="50,000원"
            android:id="@+id/text_deposit"
            app:layout_columnWeight = "3"
            app:layout_gravity="right" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="배송비"
            android:id="@+id/textView17"
            app:layout_columnWeight = "0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="20,000원"
            android:id="@+id/text_fee"
            app:layout_columnWeight = "3"
            app:layout_gravity="right" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="총 결제 금액"
            android:id="@+id/textView19"
            app:layout_columnWeight = "0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/text_total_price"
            app:layout_columnWeight = "3"
            app:layout_gravity="right" />
    </android.support.v7.widget.GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/android.support.v7.widget.GridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/ic_card"
            android:layout_marginRight="@dimen/order_icon_right_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/header_payment"
            android:id="@+id/textView3" />
    </LinearLayout>


    <ImageView
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:src="@drawable/first_line"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/btn_card"
            android:layout_weight="1"
            android:background="@drawable/btn_card_selector" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/btn_phone"
            android:layout_weight="1"
            android:background="@drawable/btn_phone_selector" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/btn_check"
            android:layout_weight="1"
            android:background="@drawable/btn_wallet_selector" />
    </LinearLayout>
</RelativeLayout>