<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/community_thumb_width"
    android:layout_height="@dimen/community_thumb_height">

    <ImageView
        android:id="@+id/image_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/image_profile"
        android:layout_width="@dimen/profile_image_size"
        android:layout_height="@dimen/profile_image_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|bottom"
        android:src="@mipmap/ic_launcher"
        app:civ_border="false"
        android:layout_marginBottom="@dimen/thumbview_margin_vertical"
        android:layout_marginLeft="@dimen/thumbview_margin_left" />


    <TextView
        android:id="@+id/text_hash_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginBottom="@dimen/thumbview_margin_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/thumbview_margin_left"
        android:layout_marginTop="@dimen/thumbview_margin_vertical">

        <ImageView
            android:id="@+id/image_scrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_scrap_selected"
            android:layout_marginRight="@dimen/thumb_scrap_right_margin" />

        <TextView
            android:id="@+id/text_scrap_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</FrameLayout>