<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/notify_view_height">

    <ImageView
        android:layout_width="@dimen/notify_icon_size"
        android:layout_height="@dimen/notify_icon_size"
        android:id="@+id/image_address_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/text_message"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_address_icon"
        android:layout_alignBottom="@+id/image_address_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical" />

</RelativeLayout>